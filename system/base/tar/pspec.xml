<!DOCTYPE INARY SYSTEM "http://www.sulin.org/standarts/inary/inary-spec.dtd">
<INARY>
    <Source>
        <Name>tar</Name>
        <Homepage>http://www.gnu.org/software/tar/</Homepage>
        <Packager>
            <Name>Süleyman POYRAZ</Name>
            <Email>zaryob.dev@gmail.com</Email>
        </Packager>
        <License>GPLv3+</License>
        <IsA>app:console</IsA>
        <Summary>A GNU file archiving program</Summary>
        <Description>The GNU tar program saves many files together in one archive and can restore individual files (or all of the files) from that archive.</Description>
        <Archive sha1sum="ad53ec4fa815177ab8dbcaa27a42557295142f94" 
type="tarxz">http://mirrors.kernel.org/gnu/tar/tar-1.31.tar.xz</Archive>
        <AdditionalFiles>
            <AdditionalFile target="doc/tar.1">tar.1</AdditionalFile>
        </AdditionalFiles>
        <BuildDependencies>
            <Dependency>acl-devel</Dependency>
            <Dependency>gettext</Dependency>
            <Dependency>texinfo</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>tar</Name>
        <RuntimeDependencies>
            <Dependency>acl</Dependency>
            <Dependency>glibc</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/bin</Path>
            <Path fileType="executable">/sbin</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="info">/usr/share/info</Path>
        </Files>
    </Package>

        <Package>
            <Name>tar-docs</Name>
            <IsA>data:doc</IsA>
        <PartOf>system.doc</PartOf>
            <RuntimeDependencies>
                <Dependency>readline</Dependency>
            </RuntimeDependencies>
            <Files>
                <Path fileType="doc">/usr/share/doc</Path>
            </Files>
        </Package>
        <Package>
            <Name>tar-pages</Name>
            <IsA>data:doc</IsA>
        <PartOf>system.doc</PartOf>
            <Summary>Manpages for readline</Summary>
            <RuntimeDependencies>
                <Dependency release="current">tar</Dependency>
            </RuntimeDependencies>
            <Files>
                <Path fileType="man">/usr/share/man</Path>
            </Files>
        </Package>
